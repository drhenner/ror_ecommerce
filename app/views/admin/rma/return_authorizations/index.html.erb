<h2>RMA`s</h2>

<% content_for :head do -%>
  <%= javascript_include_tag "admin/index_grid" %>
<% end %>
<%#= render :partial => '/admin/rma/sub_header'%>

<div id="admin_rma_page_wrapper">
  <div id="admin_rma_grid_wrapper" class='column'>
    <%= raw jqgrid("RMA`s", "admin_rma_grid", admin_rma_order_return_authorizations_path(@order),
      [
        { :field => "user_name",    :label => "Customer", :width => 140, :resizable => false },
        { :field => "order_number", :label => "Order #",  :width => 90,  :resizable => false },
        { :field => "number",       :label => "Number",  :width => 70,   :resizable => false },
        { :field => "amount",       :label => "amount",  :width => 70,   :resizable => false },
        { :field => "state",        :label => "Status",  :width => 70,   :resizable => false }
      ], 
      {
        :height             => "390",
        :alt_rows           => true,
        :direct_selection   => true,
        :editable           => false,
        :selection_handler  => "Hadean.AdminIndexForm.showSelection",
        :rownumbers         => false,
        :rows_per_page      => 20,
        :row_list           => [20, 50, 100]
      }
    ) %>
  </div>

  <div id="admin_new_rma_button" class="admin_new_button last">
    <%#= link_to 'New Return authorization', 
                new_admin_rma_return_authorization_path, 
                :class => "button", 
                :id => "new_rma_button" %>
  </div>
</div>
<%= jqgrid_stylesheets %>
<%= jqgrid_javascripts %>


<div class='span-10'>

  <%= link_to 'Order Info', 
              admin_history_order_path(@order), 
              :class => 'button heart' %>
</div>
<script>
  Hadean.AdminIndexForm.registerOnLoadHandler(Hadean.AdminIndexForm.initialize('/admin/rma/orders/<%=@order.id%>/return_authorizations'));
</script>








