<h3>Editing (<%= @tax_rate.state.abbreviation %> <%= @tax_rate.tax_category.name %>) Tax Rate</h3>

<%= form_for(@tax_rate, :url => admin_config_tax_rate_path(@tax_rate)) do |f| %>
  <%= render :partial =>  'form', :locals => {:f => f} %>
  <%= f.submit t("button_save"), :class => "button" %>
  <%= link_to t("button_back"), admin_config_tax_rates_path, :class => 'secondary button' %>
<% end %>

<% content_for :bottom do -%>
  <%= javascript_include_tag "admin/config_tax_rate" %>

  <script>
    Hadean.Utility.registerOnLoadHandler(Hadean.TaxRateForm.initialize());
  </script>
<% end %>
