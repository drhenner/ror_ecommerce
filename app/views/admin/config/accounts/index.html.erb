<h3>Listing Accounts</h3>

<div class="admin_accounts">
  <table>
    <thead>
    <tr class='odd'>
      <th class='column1_header'>Account type</th>
      <th>Monthly charge</th>
      <th>Active</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

  <% @accounts.each do |account| %>
    <tr class='<%= cycle("odd", "")%>'>
      <td><%= account.account_type %></td>
      <td><%= account.monthly_charge %></td>
      <td><%= account.active %></td>
      <td><%= link_to "Edit", edit_admin_config_account_path(account) %></td>
      <td><%= link_to "Delete", admin_config_account_path(account), :method => :delete %></td>
    </tr>
  <% end %>
  </table>
</div>

<%= link_to 'New Account', new_admin_config_account_path, :class => 'button' %>