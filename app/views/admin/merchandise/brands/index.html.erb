<%= render :partial => '/admin/merchandise/sub_header'%>

<div class='admin_h3_index_header'>
    <h3 style='width:220px;float:left;display:block;'>Brands</h3>
    <span class='admin_h3_index_header_buttons'>
      <%= link_to "New Brand", new_admin_merchandise_brand_path, :class => 'button' %>
    </span>
</div>

<div class="admin_brands">
  <table>
    <thead>
    <tr class='odd'>
      <th class='column1_header'>Name</th><th></th><th></th>
    </tr>
    </thead>
    <% for brand in @brands %>
      <tr class='<%= cycle("odd", "")%>'>
        <td><%= link_to brand.name, admin_merchandise_brand_path(brand) %></td>
        <td><%= link_to "Edit", edit_admin_merchandise_brand_path(brand) %></td>
        <td><%= link_to "Delete", admin_merchandise_brand_path(brand), confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>
